<?xml version="1.0" encoding="utf-8"?>
<!-- 位移动画布局 -->
<set xmlns:android="http://schemas.android.com/apk/res/android" >

    <translate
        android:duration="1000"
        android:fromXDelta="0%"
        android:toXDelta="100%" >
    </translate>

    <alpha
        android:duration="1000"
        android:fromAlpha="1.0"
        android:toAlpha="0.0" >
    </alpha>

</set>