<?xml version="1.0" encoding="utf-8"?>
<!-- 这是联系人主界面跳转后的子界面,有发短信和打电话.只针对某个人. -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fcfcfc" >
<!-- 发送短信的按钮.没有代码实现 -->
    <ImageButton
        android:id="@+id/contact_detail_send_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#0000"
        android:src="@drawable/contact_detail_sms" />
<!-- 打电话的按钮 ,代码已经实现.-->
    <ImageButton
        android:id="@+id/contact_detail_call_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/contact_detail_send_sms"
        android:background="#0000"
        android:src="@drawable/contact_detail_phone" />
<!-- padding:组件之间的间距 -->
    <TextView
        android:id="@+id/contact_detail_number_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="住宅电话"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/contact_detail_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_detail_number_type"
        android:padding="4dp"
        android:text="13911111111"
        android:textColor="#000"
        android:textSize="14sp" />

</RelativeLayout>